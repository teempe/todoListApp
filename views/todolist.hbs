<!-- This section should be hidden by default and shown when there are todos -->
<section class="main">
    <input id="toggle-all" class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
        <!-- These are here just to show the structure of the list items -->
        <!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
        {{#each tasks}}
            {{#if this.isFinished}}
                <li class="completed" data-id={{this.id}}>
                <div class="view">
                    <input class="toggle" data-id={{this.id}} type="checkbox" checked>
            {{else}}
                <li data-id={{this.id}}>
                <div class="view">
                    <input class="toggle" data-id={{this.id}} type="checkbox">
            {{/if}}
                {{!-- <div class="view">
                    <input class="toggle" data-id={{this.id}} type="checkbox" checked> --}}
                    <label data-id={{this.id}}>{{this.description}}</label>
                    <button class="destroy" data-id={{this.id}}></button>
                </div>
                <input class="edit" data-id={{this.id}} value="">
            </li>
        {{/each}}
    </ul>
</section>
<!-- This footer should hidden by default and shown when there are todos -->
<footer class="footer">
    <!-- This should be `0 items left` by default -->
    <span class="todo-count"><strong>0</strong> item left</span>
    <!-- Remove this if you don't implement routing -->
    <ul class="filters">
        {{#with filter}}
            <li>
                {{#if all}}
                    <a class="selected" href="/">All</a>
                {{else}}
                    <a href="/">All</a>
                {{/if}}
            </li>
            <li>
                {{#if active}}
                    <a class="selected" href="/active">Active</a>
                {{else}}
                    <a href="/active">Active</a>
                {{/if}}
            </li>
            <li>
                {{#if completed}}
                    <a class="selected" href="/completed">Completed</a>
                {{else}}
                    <a href="/completed">Completed</a>
                {{/if}}
            </li>
            {{!-- <li>
                <a href="/active">Active</a>
            </li>
            <li>
                <a href="/completed">Completed</a>
            </li> --}}
        {{/with}}
    </ul>
    <!-- Hidden if no completed items are left â†“ -->
    <button class="clear-completed">Clear completed</button>
</footer>